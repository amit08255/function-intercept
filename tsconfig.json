{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "newLine": "LF",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "declaration": true
    },
    "files": [
        "./index.ts"
    ],
    "exclude": [
        "./test/*",
        "./node_modules/*"
    ]
}
